# EditorConfig is awesome: https://EditorConfig.org
# For a human version of these guidelines, please see:
# https://tritondigitaldev.atlassian.net/wiki/spaces/PLTF/pages/930152481/General+Coding+Standards

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 2

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

[*.sh]
# like -i=2
indent_style = space
indent_size = 2

shell_variant      = bash  # like -ln=bash
binary_next_line   = true  # like -bn
switch_case_indent = true  # like -ci
space_redirects    = true  # like -sr
keep_padding       = true  # like -kp
function_next_line = false # like -fn
never_split        = true  # like -ns

# Tab indentation (no size specified)
[Makefile]
indent_style = tab
